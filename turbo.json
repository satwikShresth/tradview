{
   "$schema": "https://turbo.build/schema.json",
   "globalDependencies": ["**/.env.*local", ".env"],
   "tasks": {
      "build": {
         "cache": false,
         "outputs": [
            "dist/**",
            ".next/**",
            "!.next/cache/**",
            "build/**",
            "out/**"
         ]
      },
      "compile:watch": {
         "cache": false,
         "persistent": true
      },
      "dev": {
         "cache": false,
         "persistent": true
      },
      "generate": {
         "cache": false
      },
      "test": {
         "dependsOn": ["^compile"],
         "outputs": ["coverage/**"],
         "inputs": [
            "src/**/*.tsx",
            "src/**/*.ts",
            "test/**/*.ts",
            "test/**/*.tsx"
         ]
      },
      "format": {
         "outputs": [],
         "cache": false
      },
      "type-check": {
         "outputs": []
      },
      "clean": {
         "cache": false
      },
      "setup": {
         "cache": false
      }
   }
}
